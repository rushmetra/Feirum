@model Feirum.Models.Fairs

@{
    ViewData["Title"] = "Eliminar feira";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Tem a certeza que pretende eliminar <span class="text-danger">@Model.Description?</span></h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
