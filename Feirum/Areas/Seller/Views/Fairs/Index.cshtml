@model IEnumerable<Feirum.Models.Fairs>

@{
    ViewData["Title"] = "Minhas feiras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>As minhas feiras</h1>
