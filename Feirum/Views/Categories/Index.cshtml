@model Categories



@if (Model != null)
{ 
       <div class="d-flex flex-row justify-content-between">
            <h1 class="p-2 text-center">Feiras de @ViewBag.categoryName</h1>
            <a asp-controller="CategoriesToUser" asp-action="Index" class="btn btn-light btn-lg p-2">Sair <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z"/>
              <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"/>
            </svg></a>
        </div>

        <hr></hr>

       <div class="d-flex flex-row justify-content-between">
        @foreach(var fair in Model.FairsList)
        {
            <div class="card p-2" style="width: 18rem;">
                <img class="card-img-top" src=@fair.Image alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@fair.Description</h5>
                    <a asp-controller="UserFairs" asp-action="Index" asp-route-fairId="@fair.Id" class="btn btn-outline-secondary btn-sm">Ver Feira</a>
                </div>
            </div>
        }
    </div>
}