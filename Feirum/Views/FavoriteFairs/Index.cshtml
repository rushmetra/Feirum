@model IEnumerable<Feirum.Models.FavoriteFair>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Feiras favoritas</h1>

<table class="table">
    <thead>
        <tr>
            <th>Feira</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.FairId
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { userId = item.UserId, fairId = item.FairId })
            </td>
        </tr>
}
    </tbody>
</table>
