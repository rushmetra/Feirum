@model Feirum.Models.Orders

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes de compra</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id do comprador
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuyerId)
        </dd>
        <dt class = "col-sm-2">
            Id do Produto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class = "col-sm-2">
            Quantidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Preço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)€
        </dd>
        <dt class = "col-sm-2">
            Data da compra
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
