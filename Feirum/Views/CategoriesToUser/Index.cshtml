@model CategoriesToUserModel

<div class="row mt-5">
    <div class="col-md-10">
        <h2>Certames</h2>
    </div>
</div>

@if (Model != null)
{   
    <div class="d-flex flex-row">
        @foreach(var category in Model.Categories)
        {
            <div class="card p-2" style="width: 18rem;">
                <img class="card-img-top" src="https://www.altominho.tv/site/wp-content/uploads/2022/09/desporto.jpeg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@category.Description</h5>
                        <a asp-controller="Categories" asp-action="Index" asp-route-categoryId="@category.Id" class="btn btn-outline-secondary btn-sm">Explorar</a>
                </div>
            </div>
        }
    </div>
}